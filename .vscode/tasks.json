{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Configure",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-G",
				"MinGW Makefiles",
				".."
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build with Make",
			"type": "shell",
			"command": "mingw32-make",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "cmake",
			"label": "CMake: configure",
			"command": "configure",
			"problemMatcher": [],
			"detail": "CMake template configure task",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}